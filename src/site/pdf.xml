<?xml version="1.0" encoding="UTF-8"?>
<document xmlns="http://maven.apache.org/DOCUMENT/1.0.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/DOCUMENT/1.0.1 http://maven.apache.org/xsd/document-1.0.1.xsd"
  outputName="teamengine-${project.version}">

  <meta>
    <title>${project.name}</title>
    <author>${project.developers[0].email}</author>
  </meta>

  <toc name="Table of Contents" depth="2">
    <item name="Overview" ref="index.xhtml"/>
    <item name="Installation" ref="installation.xhtml.vm"/>
    <item name="User's Guide" ref="users.xhtml"/>
    <item name="Tester's Guide" ref="testers.xhtml"/>
  </toc>

  <cover>
    <coverTitle>${project.name}</coverTitle>
    <coverSubTitle>Version: ${project.version}</coverSubTitle>
    <coverType>User Guide</coverType>
    <coverdate>${date}</coverdate>
    <companyName>The Open Geospatial Consortium</companyName>
    <companyLogo>images/ogc-logo-149x75.png</companyLogo>
  </cover>
</document>
